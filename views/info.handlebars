<div class="grid grid-cols-4 place-content-center">
    <button class="go-back-btn">Go Back</button>
    <main>
        <h1 class="title">Add a new dog</h1>
        <form action="/api/dog/info" method="post">
            <section class="container">
                <div>
                    <div>
                        <label for="name">Name:</label>
                        <input type="text" name="name" id="name" class="input-box double-size" required>
                    </div>
                    <div>
                        <label for="breed">Breed:</label>
                        <input type="text" name="breed" id="breed" class="input-box double-size" required>
                    </div>
                    <div>
                        <label for="sex">Sex:</label>
                        <input type="text" name="sex" id="sex" class="input-box double-size" required>
                    </div>
                    <div>
                        <label for="spay_neuter">Spay/Neuter:</label>
                        <select name="spay_neuter" id="spay_neuter" class="input-box double-size" required>
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                </div>

                <div>
                    <div>
                        <label for="age">Age:</label>
                        <input type="text" name="age" id="age" class="input-box double-size" required>
                    </div>
                    <div>
                        <label for="weight">Weight:</label>
                        <input type="text" name="weight" id="weight" class="input-box double-size" required>
                    </div>
                    <div>
                        <label for="vet-name">Vet Name:</label>
                        <input type="text" name="vet-name" id="vet-name" class="text-xl border rounded-xl p-2 bg-neutral-200 placeholder:text-neutral-400" required>
                    </div>
                    <div class="row">
                        <label for="phone-number">Phone Number:</label>
                        <input type="text" name="phone-number" id="phone-number" class="input-box double-size" required>
                    </div>
                </div>
            </section>

            <section class="container">
                <div class="row">
                    <label for="vaccinations">Vaccinations:</label>
                    <select name="vaccinations" id="vaccinations" class="input-box double-size" required>
                        <option value="vaccine1">All Necessary Vaccines</option>
                        <option value="vaccine2">Puppy Only Vaccines</option>
                        <!-- Add more vaccine options as needed -->
                    </select>
                </div>
                <div class="row">
                    <label for="address">Address:</label>
                    <input type="text" name="address" id="address" class="input-box double-size" required>
                </div>
            </section>
            <button type="submit" class="save-btn">Save</button>
        </form>
    </main>
</div>