<body>
    <header>
        <nav>
            <h1>Admin Dash</h1>
            <div>
                <button class="main-button">Welcome '{{ dynamicData.clientName }}'</button> 
                <!-- Using JavaScript to fetch and insert actual client's name -->
                <button class="main-button">Log Out</button>
            </div>
            
        </nav>
    </header>

    <button class="go-back-btn">Go Back</button>
    <!-- Using JavaScript functionality to navigate back to homepage.handlebars -->

    <main>
        <h1 class="title">'{{ dynamicData.dogName }}'</h1>
        <h2>Information</h2>

        <section class="container">
            <div class="column">
                <div class="row">
                    <label for="name">Name:</label>
                    <input type="text" id="name" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="breed">Breed:</label>
                    <input type="text" id="breed" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="picture">Picture:</label>
                    <input type="text" id="picture" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="spay-neuter">Spay/Neuter:</label>
                    <select id="spay-neuter" class="input-box double-size">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                </div>
            </div>

            <div class="column">
                <div class="row">
                    <label for="age">Age:</label>
                    <input type="text" id="age" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="weight">Weight:</label>
                    <input type="text" id="weight" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="vet-name">Vet Name:</label>
                    <input type="text" id="vet-name" class="input-box double-size">
                </div>
                <div class="row">
                    <label for="phone-number">Phone Number:</label>
                    <input type="text" id="phone-number" class="input-box double-size">
                </div>
            </div>
        </section>

        <section class="container">
            <div class="row">
                <label for="email">Email:</label>
                <input type="text" id="email" class="input-box double-size">
            </div>
            <div class="row">
                <label for="vaccinations">Vaccinations:</label>
                <select id="vaccinations" class="input-box double-size">
                    <option value="vaccine1">Vaccine 1</option>
                    <option value="vaccine2">Vaccine 2</option>
                    <!-- Add more vaccine options as needed -->
                </select>
            </div>
            <div class="row">
                <label for="address">Address:</label>
                <input type="text" id="address" class="input-box double-size">
            </div>
        </section>
    </main>

    <button class="save-btn">Save</button>
</body>

