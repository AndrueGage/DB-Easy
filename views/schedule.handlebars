<div>
    <p>{{user.first_name}}</p>
    <form action="/events" method="post">
        <div class="form-group">
            <label for="eventTitle">Event Title:</label>

            <select class="form-control" id="eventTitle" name="event_type" required>
                <option value="Boarding">Boarding</option>
                <option value="Daycare">Daycare</option>
                <option value="Training">Training</option>
            </select>
        </div>

        <div class="form-group">
            <label for="eventTitle">Select your dog</label>
            <select class="form-control" id="eventTitle" name="dog_id" required>
                {{#each user.dogs as |dog|}}
                <option value="{{dog.id}}">{{ dog.name }}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="eventDate">Date:</label>
            <input type="date" class="form-control" id="eventDate" name="date">
            </select>
        </div>
        <button type="submit">Add Event</button>
    </form>
</div>
